{
  "name": "inventario-almacen",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "AplicaciÃ³n de inventario con Electron, React, Supabase e IA.",
  "scripts": {
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite --config configs/vite.renderer.config.ts",
    "dev:electron": "ts-node --project tsconfig.node.json src/main/electron/main.ts",
    "build": "run-p build:renderer build:electron",
    "build:renderer": "vite build --config configs/vite.renderer.config.ts",
    "build:electron": "tsc -p tsconfig.node.json",
    "lint": "eslint \"{src,mcp-server}/**/*.{ts,tsx}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit -p tsconfig.app.json",
    "mcp:dev": "ts-node --project tsconfig.mcp.json mcp-server/index.ts",
    "import:products": "ts-node --project tsconfig.node.json scripts/import-products-from-excel.ts",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=18.19.0"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-toast": "^1.2.15",
    "@supabase/supabase-js": "^2.45.1",
    "@tanstack/react-query": "^5.59.17",
    "autoprefixer": "^10.4.22",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron": "^31.2.0",
    "electron-log": "^5.1.4",
    "framer-motion": "^12.23.24",
    "i18next": "^23.10.1",
    "lucide-react": "^0.555.0",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.0.1",
    "react-router-dom": "^7.9.6",
    "recharts": "^3.5.0",
    "tailwind-merge": "^3.4.0",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/xlsx": "^0.0.35",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.0.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.14",
    "ts-node": "^10.9.2",
    "tslib": "^2.7.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vitest": "^2.1.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
