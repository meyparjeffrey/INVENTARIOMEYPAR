{
  "name": "inventario-almacen",
  "version": "0.7.0",
  "private": true,
  "type": "module",
  "description": "Aplicación de inventario con Electron, React, Supabase e IA.",
  "author": "Inventario Almacén",
  "main": "dist/main/src/main/electron/main.cjs",
  "scripts": {
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite --config configs/vite.renderer.config.ts",
    "dev:electron": "npm run build:electron && node scripts/dev-electron.cjs",
    "dev:web": "vite --config configs/vite.web.config.ts",
    "build": "run-p build:renderer build:electron && npm run build:copy-splash",
    "build:renderer": "vite build --config configs/vite.renderer.config.ts",
    "build:electron": "tsc -p tsconfig.node.json",
    "build:copy-splash": "node scripts/build-copy-splash.cjs",
    "build:web": "vite build --config configs/vite.web.config.ts",
    "build:win": "npm run build && cross-env WIN_CSC_LINK= CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win",
    "build:win:dir": "npm run build && electron-builder --win --dir",
    "build:win:portable": "npm run build && electron-builder --win portable",
    "build:win:release": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/build-windows-release.ps1",
    "dist": "npm run build && electron-builder",
    "lint": "eslint \"{src,mcp-server}/**/*.{ts,tsx}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit -p tsconfig.app.json",
    "mcp:dev": "ts-node --project tsconfig.mcp.json mcp-server/index.ts",
    "import:products": "ts-node --project tsconfig.node.json scripts/import-products-from-excel.ts",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=18.19.0"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-toast": "^1.2.15",
    "@supabase/supabase-js": "^2.45.1",
    "@tanstack/react-query": "^5.59.17",
    "autoprefixer": "^10.4.22",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "i18next": "^23.10.1",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.555.0",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.8",
    "react-easy-crop": "^5.5.6",
    "react-i18next": "^15.0.1",
    "react-router-dom": "^7.9.6",
    "recharts": "^3.5.0",
    "html-to-image": "^1.11.13",
    "jszip": "^3.10.1",
    "qrcode": "^1.5.4",
    "tailwind-merge": "^3.4.0",
    "xlsx": "^0.18.5",
    "xlsx-style": "^0.8.13",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@resvg/resvg-js": "^2.6.2",
    "@types/node": "^20.11.30",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/xlsx": "^0.0.35",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.0.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "electron-log": "^5.1.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.9",
    "npm-run-all": "^4.1.5",
    "png-to-ico": "^3.0.1",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.14",
    "ts-node": "^10.9.2",
    "tslib": "^2.7.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vitest": "^2.1.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "build": {
    "appId": "com.inventario.almacen",
    "productName": "INVENTARI MEYPAR",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "npmRebuild": false,
    "extraResources": [
      {
        "from": "build/icon.ico",
        "to": "icon.ico"
      }
    ],
    "files": [
      "dist/**/*",
      "package.json",
      "!node_modules/**/*",
      "!src/**/*",
      "!configs/**/*",
      "!scripts/**/*",
      "!mcp-server/**/*",
      "!Docs/**/*",
      "!*.config.*",
      "!tsconfig*.json",
      "!vitest.config.ts"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "INVENTARI MEYPAR",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "menuCategory": false,
      "warningsAsErrors": false,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerLanguages": [
        "es_ES",
        "en_US"
      ]
    }
  }
}
